mixin header
    // HEADER
    header.header
        .section-inner
            .items-wrapper.header-items-wrapper
                ul.burger
                    li.burger__line
                    li.burger__line
                    li.burger__line
                ul.nav
                    li
                        a.nav__item(href='./index.html')
                            | Home
                            span.link-spacer
                                | Home
                    li
                        a.nav__item(href='./products.html')
                            | Products
                            span.link-spacer
                                | Products
                    li
                        a.nav__item(href='./gallery.html')
                            | Gallery
                            span.link-spacer
                                | Gallery
                .logo
                    a.logo__text.c-default(href='./index.html')
                        .logo__text-line Restaurant
                        .logo__text-line concept
                .bar
                    #auth.bar__auth
                        .bar__auth-mobile
                            button.btn-icon
                                i.fas.fa-sign-in-alt(data-trigger="signin")
                        .bar__auth-signin
                            button#signInBtn.btn.btn--secondary(data-trigger="signin")
                                | Sign in
                        .bar__auth-signup
                            button#signUpBtn.btn.btn--primary.btn--ml(data-trigger="signup")
                                | Create account
                    #userNav.bar__usernav
                        span#userNavBtn.bar__usernav-btn
                            .bar__usernav-btn-avatar
                                span#userLetter.user-letter
                                img#userPicture.user-photo
                            #userName.bar__usernav-btn-name
                        .dropdown-menu
                            ul.dropdown-menu__list
                                li.dropdown-menu__item
                                    span.ico-wrapper
                                        i.fas.fa-user
                                    a.dropdown-menu__link(href="./profile.html#user")
                                        | Profile
                                li.dropdown-menu__item
                                    span.ico-wrapper
                                        i.fas.fa-star
                                    a.dropdown-menu__link(href="./profile.html#reservation")
                                        | Reservation
                                li.dropdown-menu__item
                                    span.ico-wrapper
                                        i.fas.fa-heart
                                    a.dropdown-menu__link(href="./profile.html#favourite")
                                        | Favourite
                                li#signOutBtn.dropdown-menu__item
                                    span.ico-wrapper
                                        i.fas.fa-sign-out-alt
                                    a.dropdown-menu__link(href="#signout")
                                        | Sign out
                    .bar__helpers
                        .bar__helpers-search
                            button.btn-icon
                                i.fas.fa-search(data-trigger="search")
                        .bar__helpers-more
                            button.btn-icon.btn--ml
                                i.fas.fa-ellipsis-h
