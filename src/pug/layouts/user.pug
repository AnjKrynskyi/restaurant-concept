include ../../app/components/profile-nav/profile-nav

block variables

doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        title #{title}
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous")
    body
        main.profile
            + profile-nav
            .profile__inner
                #profileHeader.profile__header
                    #profileDash.dash
                        .sort.column
                            span.sort__suptitle Sort by:
                            button.btn-default.btn-sort New first
                        .total.column
                            span#reservTotal
                    button.btn.btn--secondary(data-trigger="signout") Sign Out
                    button.btn.btn--primary.btn--ml(data-trigger="close") Close
                block content
            // close .profile__inner
        // close .profile